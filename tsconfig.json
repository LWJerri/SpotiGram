{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "NodeNext",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
