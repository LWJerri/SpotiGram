{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "NodeNext",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
