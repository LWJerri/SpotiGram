generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Playlist {
  id         String @id @unique
  snapshotId String @map("snapshot_id")

  @@map("playlists")
}

model Track {
  id      String    @id @default(cuid())
  trackId String    @map("track_id")
  addedAt DateTime? @default(now()) @map("added_at")
  name    String

  @@map("tracks")
}

model TrackQueue {
  id       String   @id @default(cuid())
  trackUri String   @unique @map("track_uri")
  addedAt  DateTime @default(now()) @map("added_at")

  @@map("tracks_queue")
}
